- title "Search Updates"
- content_for :title do
  Search Updates

- content_for :top do
  #updates-search.search
    %form#search-form.search{:action => "search", :method => "GET", :name => "search_form"}
      %input#search-input{:name => "q", :type => "text"}
      %select#scope{:name => "scope"}
        %option{:selected => "selected", :name => "updates"}= "updates"
        %option{:name => "users"}= "users"
      %input#search-button.button{:type => "submit", :value => "Search"}

#search-results
  = render :partial => "updates/list", :locals => {:updates => @updates, :tagline => "No statuses match your search."}

