- if current_user
  #current_user_block.vcard.block
    - present current_user.author, AvatarPresenter do |avatar_presenter|
      = avatar_presenter.avatar.html_safe
    .user-info
      %h4.name
        = current_user.author.display_name
      .nickname
        %a.url{:href=>"/users/#{current_user.username}"}
          @#{current_user.username}
      %ul.stats
        %li.update-count
          .icon
          %a{ :href => "/users/#{current_user.username}"}= current_user.feed.updates.count
          Updates
        %li.following-count
          .icon
          %a{ :href => "/users/#{current_user.username}/following"}= current_user.following.length
          Following
        %li.follower-count.last
          .icon
          %a{ :href => "/users/#{current_user.username}/followers"}= current_user.followers.length
          Followers
