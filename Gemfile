gem "mongo_mapper", "~> 0.9.2"
gem "bson_ext", "~> 1.3.1"
gem "i18n", "~> 0.6.0"
gem "twitter", "~> 1.6.2"
gem "pony", "~> 1.3"
gem "rdiscount", "~> 1.6.8"
gem "ostatus", "~> 0.0.9"
gem "osub", "~> 0.0.6"
gem "opub", "~> 0.0.1"
